extends ../../../views/layout

block content
	form(action='/session', method='post', role="form")
		.form-group
			label(for='email')
				| Email: 
			input(id='email', class='form-control', type='text', name='user[email]')
		.form-group
			label(for='password')
				| Password: 
			input(id='password', class='form-control', type='password', name='user[password]')
		input(type='submit', class='btn btn-default')